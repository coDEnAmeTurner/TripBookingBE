@model TripBookingBE.Models.Trip

@if (ViewData["statusCode"] != null && ViewData["errorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <p><b>Status Code: @(ViewData["statusCode"].ToString())</b></p>
        <p><b>Message: @(ViewData["errorMessage"].ToString())</b></p>
    </div>
}


<h4>Trip</h4>
<hr />
<form asp-action="CreateOrUpdate" method="post" class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DateCreated" />
    <input type="hidden" asp-for="DateModified" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="form-group col col-12">
        <label asp-for="DepartureTimeStr" class="control-label col col-12" style="font-weight: bold;"></label>
        @if (!ViewData["AllowedSave"].ToString().Equals("False"))
        {
            <input asp-for="DepartureTimeStr" type="text" id="datepicker" class="form-control" autocomplete="off"
                class="form-control col col-12" />
        }
        else
        {
            <input readonly=@(true) asp-for="DepartureTime.Value.Date" type="text"
                id="datepicker" class="form-control" autocomplete="off" class="form-control col col-12" />
        }
        <span asp-validation-for="DepartureTimeStr" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="PlaceCount" class="control-label col col-12" style="font-weight: bold;"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="PlaceCount"
            class="form-control col col-12" />
        <span asp-validation-for="PlaceCount" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="RegistrationNumber" class="control-label col col-12" style="font-weight: bold;"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="RegistrationNumber"
            class="form-control col col-12" />
        <span asp-validation-for="RegistrationNumber" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label for="filter-routeId" class="form-label" style="font-weight: bold;">Route: </label>
        <select readonly=@(ViewData["AllowedSave"].ToString().Equals("False"))
            class="form-control col col-12 form-select" asp-for="RouteId" id="filter-routeId"
            asp-items="ViewBag.RouteOptions">
            <option value=@(null)>Default</option>
        </select>

    </div>
    <div class="form-group col col-12">
        <label for="filter-driverId" class="form-label" style="font-weight: bold;">Driver: </label>
        <select readonly=@(ViewData["AllowedSave"].ToString().Equals("False"))
            class="form-control col col-12 form-select" asp-for="DriverId" id="filter-driverId"
            asp-items="ViewBag.DriverOptions">
            <option value=@(null)>Default</option>
        </select>

    </div>
    <div class="form-group col col-12 mt-2 justify-content-center">
        <input disabled=@(ViewData["AllowedSave"].ToString().Equals("False")) type="submit" value="Save"
            class="btn btn-primary" />
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    $(function () {
        $("#datepicker").datepicker({
            dateFormat: "dd/mm/yy"
        });
    });
</script>