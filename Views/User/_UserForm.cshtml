@model TripBookingBE.Models.User

@ViewData["AllowedSave"]

<h4>User</h4>
<hr />
<form asp-action="CreateOrUpdate" method="post" class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) type="hidden" asp-for="Id" />
    <div class="form-group col col-12">
        <label asp-for="Avatar" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="Avatar" class="form-control col col-12" />
        <span asp-validation-for="Avatar" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="UserName" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="UserName" class="form-control col col-12" />
        <span asp-validation-for="UserName" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="Password" class="control-label col col-12">@(Model.Id==0 || (ViewData["AllowedSave"]!=null && !Boolean.Parse(ViewData["AllowedSave"].ToString()))?"":"Old") Password:</label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) type="password" asp-for="Password" class="form-control col col-12" />
        <span asp-validation-for="Password" class="text-danger col col-12">@ViewData["passwordError"]</span>
    </div>
    @if (Model.Id != 0 && (ViewData["AllowedSave"]!=null && Boolean.Parse(ViewData["AllowedSave"].ToString())))
    {
        <div class="form-group col col-12">
            <label asp-for="NewPassword" class="control-label col col-12">New Password</label>
            <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) type="password" asp-for="NewPassword" class="form-control col col-12" />
            <span asp-validation-for="NewPassword" class="text-danger col col-12">@ViewData["passwordError"]</span>
        </div>
        <div class="form-group col col-12">
            <label asp-for="ConfirmPassword" class="control-label col col-12">Confirm Password</label>
            <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) type="password" asp-for="ConfirmPassword" class="form-control col col-12" />
            <span asp-validation-for="ConfirmPassword" class="text-danger col col-12">@ViewData["passwordError"]</span>
        </div>
    }
    <div class="form-group col col-12">
        <label asp-for="FirstName" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="FirstName" class="form-control col col-12" />
        <span asp-validation-for="FirstName" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="LastName" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="LastName" class="form-control col col-12" />
        <span asp-validation-for="LastName" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="Name" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="Name" class="form-control col col-12" />
        <span asp-validation-for="Name" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="Email" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="Email" class="form-control col col-12" />
        <span asp-validation-for="Email" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <div class="col col-12 container px-0">
            <label asp-for="Active" class="control-label col col-3"></label>
            <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="Active" class="form-check-input col col-3" type="checkbox" id="flexSwitchCheckChecked"
                checked>
        </div>
        <span asp-validation-for="Active" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="Phone" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="Phone" class="form-control col col-12" />
        <span asp-validation-for="Phone" class="text-danger col col-12"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label col col-12"></label>
        <select disabled=@(ViewData["AllowedSave"].ToString().Equals("False")) onchange="setSellerDisabled();" id="select-type" asp-for="Type" class="form-select col col-12" aria-label="Default select example">
            <option value="CUSTOMER">CUSTOMER</option>
            <option value="DRIVER">DRIVER</option>
            <option value="SELLER">SELLER</option>
            <option value="ADMIN">ADMIN</option>
        </select>
        <span asp-validation-for="Type" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12">
        <label asp-for="SellerCode" class="control-label col col-12"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) disabled=@(Model.Type==null||!Model.Type.Equals("SELLER")) id="seller-input" asp-for="SellerCode" class="form-control col col-12" />
        <span asp-validation-for="SellerCode" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12 mt-2 justify-content-center">
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) disabled=@ViewData["AllowedSave"] type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }

    <script>
        function setSellerDisabled() {
            var e = document.getElementById("select-type");
            var se = document.getElementById("seller-input");
            var value = e.value;

            if (value !== "SELLER") {
                se.disabled = true;
            }
            else
                se.disabled = False;

        }

    </script>
}