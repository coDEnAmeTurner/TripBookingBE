@model IEnumerable<TripBookingBE.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastLogin)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Avatar)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SellerCode)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateModified)

                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var model in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => model.Id)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.LastLogin)
                        </td>
                        <td>
                            @Html.DisplayFor(item => model.UserName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.LastName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Email)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Avatar)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Name)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Phone)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Type)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.SellerCode)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.DateCreated)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.DateModified)

                        </td>
                        <td class="d-flex justify-content-center align-items-center">
                            <a class="btn btn-light" asp-action="Edit" asp-route-id="@(model.Id)">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@(model.Id)">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@(model.Id)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>