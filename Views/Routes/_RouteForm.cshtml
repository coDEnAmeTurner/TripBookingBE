@model TripBookingBE.Models.Route

@if (ViewData["statusCode"] != null && ViewData["errorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <p><b>Status Code: @(ViewData["statusCode"].ToString())</b></p>
        <p><b>Message: @(ViewData["errorMessage"].ToString())</b></p>
    </div>
}


<h4>Route</h4>
<hr />
<form asp-action="CreateOrUpdate" method="post" class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DateCreated" />
    <input type="hidden" asp-for="DateModified" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="form-group col col-12">
        <label asp-for="RouteDescription" class="control-label col col-12" style="font-weight: bold;"></label>
        <input readonly=@(ViewData["AllowedSave"].ToString().Equals("False")) asp-for="RouteDescription"
            class="form-control col col-12" />
        <span asp-validation-for="RouteDescription" class="text-danger col col-12"></span>
    </div>
    <div class="form-group col col-12 mt-2 justify-content-center">
        <input disabled=@(ViewData["AllowedSave"].ToString().Equals("False")) type="submit" value="Save"
            class="btn btn-primary" />
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}