@model IEnumerable<TripBookingBE.Models.User>

@{
    ViewData["Title"] = "User List";
}

@if (ViewData["statusCode"] != null && ViewData["errorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <p><b>Status Code: @(ViewData["statusCode"].ToString())</b></p>
        <p><b>Message: @(ViewData["errorMessage"].ToString())</b></p>
    </div>
}

<div>
    <h4>User</h4>
    <form asp-controller="Users" asp-action="Index">
        <div class="container">
            <div class="row gy-3">
                <div class="col col-3">
                    <label for="filter-name" class="form-label">Name: </label>
                    <input id="filter-name" type="text" name="name" class="form-control" />

                </div>
                <div class="col col-3">
                    <label for="filter-type" class="form-label">Type: </label>
                    <select class="form-select" id="filter-type" name="type">
                        <option value="">Default</option>
                        <option value="CUSTOMER">CUSTOMER</option>
                        <option value="DRIVER">DRIVER</option>
                        <option value="SELLER">SELLER</option>
                        <option value="ADMIN">ADMIN</option>
                    </select>

                </div>
                <div class="col col-3">
                    <label for="filter-seller-code" class="form-label">Seller Code: </label>
                    <input id="filter-seller-code" type="text" name="sellerCode" class="form-control" />

                </div>

                <div class="col col-3">
                    <label for="filter-email" class="form-label">Email: </label>
                    <input id="filter-email" type="text" name="email" class="form-control" />

                </div>
                <div class="col col-5 mx-2 d-flex justify-content-space-between align-items-center">
                    <input class="btn btn-primary" type="submit" value="Filter" />
                    <a class="btn btn-success mx-2" asp-action="CreateOrUpdate">Create</a>
                </div>
            </div>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastLogin)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Avatar)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SellerCode)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateModified)

                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var model in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => model.Id)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.LastLogin)
                        </td>
                        <td>
                            @Html.DisplayFor(item => model.UserName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.LastName)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Email)

                        </td>
                        <td>
                            <img style="object-fit: contain;"
                                src=@(String.IsNullOrEmpty(model.Avatar) ? "aspnetcore-logo.png" : model.Avatar) width="170"
                                height="320">

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Name)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Phone)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.Type)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.SellerCode)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.DateCreated)

                        </td>
                        <td>
                            @Html.DisplayFor(item => model.DateModified)

                        </td>
                        <td>
                            <div class="d-flex justify-content-center align-items-center" style="margin-top: 8rem;">
                                <a class="btn btn-light" asp-action="CreateOrUpdate" asp-route-id="@(model.Id)">Edit</a> |
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@(model.Id)">Details</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@(model.Id)">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>